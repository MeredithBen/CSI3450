<!DOCTYPE html>
<html lang="en" and dir="Itr">


    <head>
        <meta charset="utf-8">
        <title>Favorite Songs</title>
        <link rel="stylesheet" href="/css/favoritealbums.css">
    </head>

    <!-- style for table -->
    <style>
        table {
          font-family: "Trebuchet MS", sans-serif;
          border-collapse: collapse;
          width: 100%;
          font-weight: bold;
        }
        
        td, th {
          border: 1px solid #000000;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: rgb(183, 143, 216);
        }
        </style>

        <!-- style for textfield -->
        <style>
            input[type=text] {
                width: 10%;
                border: 2px gray;
                border-radius: 4px;
                margin: 4px 0;
                outline: none;
                padding: 13px;
                box-sizing: border-box;
                transition: 0.3s;   
            }

            input[type=text]:focus {
                border-color: rgb(0, 0, 0);
                box-shadow: 0 0 8px 0 rgb(0, 0, 0);
            }
        </style>

    <body>
      
        <header><%- include('header') %></header>

        <h1>Favorite Albums</h1>
         
        <h2>Albums</h2>
      
        <div>
            <form class="add" action="/favoritealbums/add" method="POST">
            <input type="text" required class="addAlbum" name="addAlbum" style ="background-color: rgb(255, 255, 255);" placeholder= "Enter Album Name...">
            <input type="submit" class="btn1" name="btn1" value= "Add Album">
            </form>
        </div>

        <div>
            <form class="remove" action="/favoritealbums/remove" method="POST">
            <input type="text" required class="removeAlbum" name="removeAlbum" style ="background-color: rgb(255, 255, 255);" placeholder="Enter Album Name..."> 
            <input type="submit" class="btn2" name="btn2" value= "Remove Album">
        </form>
        </div>

        <div class="container">
          <table>
            <tr>
              <th>Name</th>
            </tr>
            <tr>
              <tbody>
                  <% for (let i = 0; i < album.length; i++) { %>
                      <tr>
                          <td><%= album[i].album_name %></td>
                      </tr>
                      <% } %>
              </tbody>
          </table>
          </div>   
          <script src="./routes/favoritealbums.js"></script>
          
    </body>
</html>